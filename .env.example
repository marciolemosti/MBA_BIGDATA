# Configurações do Banco de Dados PostgreSQL
# MBA Big Data - Dashboard de Indicadores Econômicos

# Configurações de Conexão
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mba_bigdata
DB_USER=mba_user
DB_PASSWORD=mba_password_2025

# Usuário da Aplicação
DB_APP_USER=mba_app_user
DB_APP_PASSWORD=app_password_2025

# Pool de Conexões
DB_POOL_MIN=2
DB_POOL_MAX=10

# Configurações do Redis (Cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_2025
REDIS_DB=0

# Configurações da Aplicação
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Configurações de Coleta de Dados
FORCE_UPDATE=false
COLLECTION_FREQUENCY_HOURS=12
DATA_RETENTION_DAYS=2555
QUALITY_THRESHOLD=0.80
MAX_RETRY_ATTEMPTS=3
CACHE_TTL_SECONDS=3600

# Configurações de APIs Externas
IBGE_API_TIMEOUT=30
BCB_API_TIMEOUT=30
TESOURO_API_TIMEOUT=45
RECEITA_API_TIMEOUT=45

# Configurações de Segurança
SECRET_KEY=mba_bigdata_secret_key_2025_change_in_production
ALLOWED_HOSTS=localhost,127.0.0.1

# Configurações do Streamlit
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_HEADLESS=true

